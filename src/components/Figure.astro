---
interface Props {
  description?: string;
}

const { description } = Astro.props as Props;
---

<figure class="wrap">
  <slot />
  {!!description && <figcaption class="caption">{description}</figcaption>}
</figure>


<style lang="scss">
  .wrap {
    margin: 0 0 24px;
    padding: 0;
  }

  .caption {
    color: hsl(var(--color-shade130));
    font-size: 1.4rem;
    text-align: center;
  }
</style>
