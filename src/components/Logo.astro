---
interface Props {
  width: number;
  ratio: number;
}

const { width, ratio } = Astro.props as Props;

---
<figure style={{ width: `${width}px`, aspectRatio: `${ratio}` }}>
  <slot />
</figure>
<style lang="scss">
  figure {
    position: relative;
    margin: 0 0 1.2rem;

    :global(p) {
      margin: 0;
      font-size: 0;
    }
  }
</style>
