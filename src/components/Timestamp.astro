---
interface Props {
  dateModified: string;
}

const { dateModified } = Astro.props as Props;
---

<time class="timestamp" datetime={dateModified}>
  {dateModified}
</time>

<style lang="scss">
  .timestamp {
    display: inline-block;
    margin-bottom: 20px;
    margin-left: -16px;
    color: hsl(var(--color-shade100));
    font-size: 1.4rem;
    line-height: 14px;

    @media (screen and min-width: 992px) {
      margin-left: 0;
    }

    &::before {
      display: inline-block;
      width: 60px;
      height: 12px;
      content: '';
      margin-right: 8px;
      background-color: hsl(var(--color-shade20));
    }
  }
</style>
