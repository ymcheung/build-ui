---
import AstroCode from 'astro/components/Code.astro';
import * as shiki from 'shiki';
import * as path from 'path';

const themePath = path.join(process.cwd(), '/src/lib/dracula.json');

const theme = await shiki.loadTheme(themePath);

const {code, lang} = Astro.props;

---
<AstroCode code={code} lang={lang} wrap={true} theme={theme}></AstroCode>
